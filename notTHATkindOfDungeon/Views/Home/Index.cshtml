@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="8000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            @* Photo by Joe Stubbs, downloaded from unsplash.com  *@
            <img src="~/images/joe-stubbs-DXIYEVJdI1Q-unsplash.jpg" alt="city alley" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    You're walking along one day and see something that wasn't there before...
                </p>
            </div>
        </div>
        <div class="item">
            @* photo downloaded from unsplash.com, taken by Markus Winkler *@
            <img src="~/images/markus-winkler--7ptKher-HU-unsplash.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Should you enter? Or turn around?
                </p>
            </div>
        </div>
        <div class="item">
            @* photo downloaded from unsplash.com taken by eslam almasri *@
            <img src="~/images/eslam-almasri-TdP6uBQecac-unsplash.jpg" alt="Dungeon hallway" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                   How curious are you? Do you keep walking? You know what curiousity did to the cat...
                </p>
            </div>
        </div>
        <div class="item">
            @* Image downloaded from unsplash.com, couldn't type the name of photographer-it's characters from a language like chinese or japanese *@
            <img src="~/images/luchuxue1997-k_pBB5wJtaU-unsplash.jpg" alt="game sign" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Do you feel compelled to explore further? Are you interested in greatness??
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
